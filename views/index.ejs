<%- include("partials/header.ejs") %>

<div class="home">
    <div class="create-blog">
        <div class="create-head">
            <h2>Surf the web with your words</h2>
            <h5>Create a unique and beautiful blog easily.</h5>
        </div>
        <div class="create-form">
            <div class="create-btn">
                <a href="/articles/new" class="create-btn-a" id="create-blog">Create Your Blog</a>
            </div>
        </div>
    </div>
</div>

<div class="blogs">
    <h2>Recent Blogs</h2>
    <% if(locals.blogs && blogs.length > 0){ %>
        <% blogs.forEach(function(blog) { %>
            <div class="blog">
                <div class="right-blog">
                    <h3><%= blog.title %></h3>
                    <p><%= blog.description %></p>
                    <a href="/articles/<%= blog.id %>">Read More</a>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <p>No blogs available.</p>
    <% } %>
</div>

