<%- include("partials/header.ejs") %>

<div class="my-blogs">
    <h2>My Blogs</h2>
    <% if (locals.blogs && blogs.length > 0) { %>
        <% blogs.forEach(function(blog) { %>
            <div class="blog">
                <h3><%= blog.title || 'No Title' %></h3>
                <p><%= blog.description || 'No Description' %></p>
                <a href="/articles/<%= blog.id %>">Read</a>
                <a href="/articles/<%= blog.id %>/edit">Edit</a>
                <form action="/articles/<%= blog.id %>/delete" method="post" style="display:inline;">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this blog?')">Delete</button>
                </form>
            </div>
        <% }); %>
    <% } else { %>
        <p>You haven't created any blogs yet.</p>
    <% } %>
</div>

<%- include("partials/footer.ejs") %>